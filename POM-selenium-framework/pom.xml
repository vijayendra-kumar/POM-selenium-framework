<!--			</includes>-->
<!--          <suiteXmlFiles>-->
<!--            <suiteXmlFile>${tfileName}</suiteXmlFile>-->
<!--          </suiteXmlFiles>-->
				<suiteXmlFiles>
                    <suiteXmlFile>testng.xml</suiteXmlFile>  Path to your TestNG XML file 
                </suiteXmlFiles>
                <properties>
                    <property>
                        <name>usedefaultlisteners</name>
                        <value>false</value>
                    </property>
                    <property>
                        <name>listener</name>
                        <value>org.testng.reporters.XMLReporter</value>
                    </property>
                </properties>
        </configuration>
      </plugin>
  </plugins>
  </build>
 
</project>